<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            app:cardCornerRadius="@dimen/margin_medium">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_medium_2"
                android:paddingEnd="@dimen/margin_medium_2"
                android:paddingTop="@dimen/margin_medium_3"
                android:paddingBottom="@dimen/margin_medium_3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lblPrescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_prescription"
                    style="@style/text_bg"
                    android:background="@drawable/lable_gray"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMedicines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_medium_1"
                    android:layout_below="@id/lblPrescription"
                    android:layout_marginBottom="@dimen/margin_small"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    android:layout_below="@id/rvMedicines"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lblSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_sub_total"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/sending_time_color"
                    android:layout_below="@id/view"
                    android:layout_marginStart="@dimen/margin_medium_1"
                    android:layout_marginTop="@dimen/margin_medium_3"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18500"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/sending_time_color"
                    android:layout_below="@id/view"
                    android:layout_marginEnd="@dimen/margin_medium_1"
                    android:layout_alignTop="@id/lblSubTotal"
                    android:layout_alignParentEnd="true"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lblDeliveryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_delivery_fee"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/sending_time_color"
                    android:layout_below="@id/lblSubTotal"
                    android:layout_alignStart="@id/lblSubTotal"
                    android:layout_marginTop="@dimen/margin_small"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDeliveryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/sending_time_color"
                    android:layout_alignEnd="@id/tvSubTotal"
                    android:layout_alignTop="@id/lblDeliveryFee"/>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    android:layout_below="@id/lblDeliveryFee"
                    android:layout_marginTop="@dimen/margin_medium_3"
                    android:layout_marginBottom="@dimen/margin_medium_3"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lblTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_total_mmk"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/sending_time_color"
                    android:layout_below="@id/view2"
                    android:layout_alignStart="@id/lblSubTotal"
                    android:layout_marginBottom="@dimen/margin_medium_1"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22500"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/sending_time_color"
                    android:layout_alignEnd="@id/tvSubTotal"
                    android:layout_alignTop="@id/lblTotal"
                    android:layout_marginBottom="@dimen/margin_medium_1"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            app:cardCornerRadius="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_medium_2"
                android:paddingEnd="@dimen/margin_medium_2"
                android:paddingTop="@dimen/margin_medium_3"
                android:paddingBottom="@dimen/margin_medium_3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lblAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_address"
                    style="@style/text_bg"
                    android:background="@drawable/lable_gray"/>
                
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_address"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/sending_time_color"
                    android:layout_below="@id/lblAddress"
                    android:layout_marginStart="@dimen/margin_medium_1"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_medium_1"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            app:cardCornerRadius="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_medium_2"
                android:paddingEnd="@dimen/margin_medium_2"
                android:paddingTop="@dimen/margin_medium_3"
                android:paddingBottom="@dimen/margin_medium_3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lblCheckoutDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_checkout_description"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/sending_time_color"
                    android:layout_marginStart="@dimen/margin_medium_1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_xxlarge"
                    android:text="@string/btn_pay"
                    style="@style/text_bg.blue.button"
                    android:textSize="@dimen/text_regular_2x"
                    android:layout_below="@id/lblCheckoutDescription"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>