<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lblSetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_set_password"
            style="@style/lbl_input_text"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_edit_text"
            style="@style/input_text"
            android:paddingStart="@dimen/margin_medium_1"
            android:inputType="textPassword"
            android:background="@drawable/rounded_corner_text_input"
            android:layout_marginTop="@dimen/margin_medium_1"
            android:elevation="@dimen/margin_small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lblRetypePw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_retype_password"
            style="@style/lbl_input_text"
            android:layout_marginTop="@dimen/margin_medium_1"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etRetypePassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_edit_text"
            style="@style/input_text"
            android:paddingStart="@dimen/margin_medium_1"
            android:inputType="textPassword"
            android:background="@drawable/rounded_corner_text_input"
            android:layout_marginTop="@dimen/margin_medium_1"
            android:elevation="@dimen/margin_small" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            style="@style/button_text_regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_edit_text"
            android:layout_marginTop="@dimen/margin_xlarge_1"
            android:background="@drawable/rounded_corner_blue"
            android:text="@string/btn_confirm" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>