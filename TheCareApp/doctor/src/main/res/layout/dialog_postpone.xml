<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_xxlarge"
    android:paddingBottom="@dimen/margin_xxlarge">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/postpone"
        android:layout_gravity="center_horizontal"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_postpone"
        style="@style/text_title"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_medium_3"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:timePickerMode="spinner"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChoose"
        android:layout_width="@dimen/width_spinner"
        android:layout_height="@dimen/margin_xxlarge"
        android:text="@string/btn_choose"
        style="@style/text_bg.blue.button"
        android:textSize="@dimen/text_regular_2x"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>