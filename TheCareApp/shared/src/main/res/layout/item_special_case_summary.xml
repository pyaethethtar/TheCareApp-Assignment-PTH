<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_medium_2"
    android:paddingEnd="@dimen/margin_medium">

    <org.mmtextview.components.MMTextView
        android:id="@+id/tvSpecialQuestion"
        style="@style/text_regular.blue"
        android:textSize="@dimen/text_regular_2x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/tv_special_question" />

    <org.mmtextview.components.MMTextView
        android:id="@+id/tvSpecialAnswer"
        style="@style/text_regular"
        android:textSize="@dimen/text_regular_2x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:text="@string/lbl_no"
        android:drawableStart="@drawable/ic_circle_blue_24"
        android:drawablePadding="@dimen/margin_medium_2"/>

</LinearLayout>