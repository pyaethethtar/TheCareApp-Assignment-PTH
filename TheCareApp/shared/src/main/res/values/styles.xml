<?xml version="1.0" encoding="utf-8"?>
<resources>






    <style name="app_title">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">@dimen/text_regular_2x</item>
        <item name="android:shadowColor">@color/color_shadow</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="input_text">
        <item name="android:textColor">@color/textcolorPrimary</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:lineSpacingExtra">@dimen/text_smaller</item>
    </style>

    <style name="lbl_input_text">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
    </style>

    <style name="button_text_regular">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="com_facebook_button.custom">
        <item name="com_facebook_login_text">@string/btn_sign_in_with_facebook</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_title">
        <item name="android:textColor">@color/textcolorPrimary</item>
        <item name="android:textSize">@dimen/text_regular_2x_2</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <style name="text_regular_gray">
        <item name="android:textColor">@color/sending_time_color</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:lineSpacingExtra">9sp</item>
    </style>

    <style name="text_regular_black">
        <item name="android:textColor">@color/textcolorPrimary</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:lineSpacingExtra">9sp</item>
    </style>








    <style name="text_regular">
        <item name="android:textColor">@color/textcolorPrimary</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="text_regular.blue">
        <item name="android:textColor">@color/textColor</item>
    </style>


    <style name="text_title.blue">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="text_small">
        <item name="android:textColor">@color/textcolorPrimary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    <style name="text_small.blue">
        <item name="android:textColor">@color/textColor</item>
    </style>


    <style name="text_bg">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:paddingStart">@dimen/margin_large</item>
        <item name="android:paddingEnd">@dimen/margin_large</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>
    <style name="text_bg.blue">
        <item name="android:background">@drawable/rounded_corner_blue_3x</item>
    </style>
    <style name="text_bg.yellow">
        <item name="android:background">@drawable/rounded_corner_yellow</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
    </style>
    <style name="text_bg.blue.button">
        <item name="android:background">@drawable/rounded_corner_blue</item>
    </style>


    <style name="btn_consultation_response">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>
    <style name="btn_consultation_response.lightblue">
        <item name="android:background">@drawable/rounded_corner_light_blue</item>
    </style>
    <style name="btn_consultation_response.orange">
        <item name="android:background">@drawable/rounded_corner_orange</item>
    </style>
    <style name="btn_consultation_response.blue">
        <item name="android:background">@drawable/rounded_corner_blue</item>
    </style>

</resources>